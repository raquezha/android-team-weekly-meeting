# GitLab Personal Access Token
# Get yours from: https://gitlab.com/-/user_settings/personal_access_tokens
# Required scopes: api, read_api, read_repository
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# Your GitLab API URL (change if self-hosted)
GITLAB_API_URL=https://gitlab.com/api/v4

# Your GitLab username (for filtering commits)
GITLAB_USERNAME=your-username

# Comma-separated list of GitLab project IDs to monitor
# Example: 12345678,87654321
GITLAB_PROJECT_IDS=

# Report Author Name (displayed in weekly report header)
REPORT_AUTHOR=Your Name

# Telegram Bot Configuration
# Create a bot via @BotFather on Telegram, then get the token
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Chat ID (group/channel ID, usually starts with -100 for supergroups)
TELEGRAM_CHAT_ID=-1001234567890

# Telegram Topic/Thread ID (for groups with topics enabled)
# Leave empty or 0 if not using topics
TELEGRAM_TOPIC_ID=123
